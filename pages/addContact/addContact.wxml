<scroll-view class="content" scroll-y="true">
  <view class="form">
    <!-- 姓氏 -->
    <view class="form-item">
      <text class="label">姓氏</text>
      <input class="input" placeholder="请输入姓氏" data-field="lastName" bindinput="onInput" value="{{lastName}}" />
    </view>

    <!-- 名字 -->
    <view class="form-item">
      <text class="label">名字</text>
      <input class="input" placeholder="请输入名字" data-field="firstName" bindinput="onInput" value="{{firstName}}" />
    </view>

    <!-- 公司 -->
    <view class="form-item">
      <text class="label">公司</text>
      <input class="input" placeholder="请输入公司名称" data-field="company" bindinput="onInput" value="{{company}}" />
    </view>

    <!-- 电话号码 -->
    <view class="form-item">
      <text class="label">电话号码</text>
      <input class="input" placeholder="请输入电话号码" data-field="phoneNumber" bindinput="onInput" value="{{phoneNumber}}" />
    </view>

    <!-- 电子邮件 -->
    <view class="form-item">
      <text class="label">电子邮件</text>
      <input class="input" placeholder="请输入电子邮件地址" data-field="email" bindinput="onInput" value="{{email}}" />
    </view>

    <!-- 其他联系方式 -->
    <view class="form-item">
      <text class="label">其他联系方式</text>
      <input class="input" placeholder="请输入其他联系方式" data-field="otherContact" bindinput="onInput" value="{{otherContact}}" />
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="button-group">
    <button class="btn btn-primary" bindtap="saveContact">保存联系人</button>
  </view>
</scroll-view>
